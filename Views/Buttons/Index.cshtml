@model MvcButton.Models.ButtonColorViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Buttons" asp-action="Index" method="get">
    @*add form markup to get search box*@
    <p>
        @*add search by color to index view*@
        <select asp-for="ButtonColor" asp-items="Model.Colors">
            <option value="">All</option>
        </select>
        @*add search by title to index view*@
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Buttons[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buttons[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buttons[0].Materials)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buttons[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buttons[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buttons[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Buttons)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materials)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
